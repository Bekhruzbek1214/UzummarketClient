<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="@drawable/item_bg"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="128dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_uzum_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="278 000 so'm"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/about_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Mahsulot nomi tarifi tudam sudam"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintStart_toEndOf="@id/img"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sotuvchi:"
        android:textStyle="normal"
        android:textColor="#99000000"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/about_product"
        app:layout_constraintStart_toEndOf="@id/img"/>

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ne'matjonov M"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="normal"
        android:textColor="#99000000"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/seller"
        app:layout_constraintTop_toTopOf="@id/seller"/>

    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="28sp"
        android:background="@drawable/bg_adder"
        app:layout_constraintTop_toBottomOf="@id/seller"
        app:layout_constraintStart_toEndOf="@id/img"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/minus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="5dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/product_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/minus"
        app:layout_constraintBottom_toBottomOf="@id/view"/>

    <ImageView
        android:id="@+id/plus"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:padding="5dp"
        android:src="@drawable/ic_plus"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="1dp"/>
    <ImageView
        android:id="@+id/delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:rotation="45"
        android:src="@drawable/plus"/>


</androidx.constraintlayout.widget.ConstraintLayout>
